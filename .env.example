# Server Configuration
NODE_ENV=production
PORT=5000

# Frontend URL
CLIENT_URL=https://workguard360.vercel.app

# Additional CORS origins (comma-separated)
CORS_EXTRA_ORIGINS=http://localhost:5173,http://localhost:3000

# Database
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/workguard360?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=<your-secret-key>
JWT_EXPIRE=30d

# Security
BCRYPT_SALT_ROUNDS=12

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
