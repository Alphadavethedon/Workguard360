# ===============================
# Backend Environment Variables
# ===============================

# MongoDB connection string (include db name)
MONGO_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/workguard360

# JWT secret must be at least 32 characters
JWT_SECRET=your-super-long-secret-key-at-least-32-characters

# Server port
PORT=5000

# Allowed origins (frontend URLs, comma separated)
CORS_ORIGIN=http://localhost:5173,https://workguard360.vercel.app

# Optional: Logging level (info, debug, warn, error)
LOG_LEVEL=info

# Optional: Environment (development, production)
NODE_ENV=development
